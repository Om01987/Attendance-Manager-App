<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="10dp">
    <TextView android:id="@+id/tv_in_time" android:layout_width="0dp"
        android:layout_weight="1" android:layout_height="wrap_content" android:text="09:10"/>
    <TextView android:id="@+id/tv_out_time" android:layout_width="0dp"
        android:layout_weight="1" android:layout_height="wrap_content" android:text="--:--"/>
    <TextView android:id="@+id/tv_session_duration" android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="wrap_content" android:text="00:45"/>
</LinearLayout>