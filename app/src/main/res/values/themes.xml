<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme -->
    <style name="Base.Theme.AttendanceManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
    </style>

    <style name="Theme.AttendanceManager" parent="Base.Theme.AttendanceManager" />

    <!-- Dialog overlay -->
    <style name="ThemeOverlay.Attendance.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleIconStyle">@style/AlertDialog.TitleIcon</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
    </style>

    <!-- Use existing M3 colors to avoid missing color refs -->
    <style name="AlertDialog.TitleIcon" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AlertDialog.BodyText" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>
