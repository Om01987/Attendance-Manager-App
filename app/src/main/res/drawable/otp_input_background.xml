<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="?attr/colorPrimary" />
            <solid android:color="?attr/colorSurfaceContainerHighest" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="?attr/colorOutline" />
            <solid android:color="?attr/colorSurfaceContainerHigh" />
        </shape>
    </item>
</selector>